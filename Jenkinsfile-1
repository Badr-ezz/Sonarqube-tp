pipeline {
    agent any
    environment {
        JAVA_HOME = '/opt/java/openjdk'
        PATH = "${env.JAVA_HOME}/bin:${env.PATH}"
        SONAR_HOST_URL = 'http://localhost:9000'  // Replace with your server URL
    }
    stages {
        stage('Scan') {
            steps {
                script {
                    sh 'chmod +x mvnw'  // Ensure mvnw is executable
                    withSonarQubeEnv('Sq1') {
                        sh "./mvnw clean sonar:sonar -Dsonar.projectKey=sonarQube_tp -Dsonar.host.url=${SONAR_HOST_URL}"
                    }
                }
            }
        }
    }
}
