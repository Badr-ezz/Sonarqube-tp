pipeline {
    agent any
    environment {
        JAVA_HOME = '/opt/java/openjdk'  // Your confirmed JDK path
        PATH = "${env.JAVA_HOME}/bin:${env.PATH}"
    }
    stages {
        stage('Scan') {
            steps {
                script {
                    // Ensure mvnw is executable
                    sh 'chmod +x mvnw'
                    
                    withSonarQubeEnv('Sq1') {
                        sh './mvnw clean org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.0.2155:sonar -Dsonar.projectKey=sonarQube_tp'
                    }
                }
            }
        }
    }
}
