pipeline {
    agent any
    
    environment {
        // Directly use the confirmed JDK 17 path
        JAVA_HOME = '/opt/java/openjdk'
        PATH = "${env.JAVA_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Verify Setup') {
            steps {
                sh '''
                    echo "Java Version:"
                    java --version
                    echo "JAVA_HOME: $JAVA_HOME"
                '''
            }
        }
        
        stage('Build & SonarQube Scan') {
            steps {
                script {
                    withSonarQubeEnv('Sq1') {
                        sh '''
                            ./mvnw clean verify \
                            sonar:sonar \
                            -Dsonar.projectKey=sonarQube_tp \
                            -Dsonar.java.jdkHome="$JAVA_HOME"
                        '''
                    }
                }
            }
        }
    }
}